<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
    </style>

    <style name="MenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="HomeTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="TextInputEditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="AccentTextInputEditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@drawable/accent_cursor_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="TextInputHint" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputError" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/user_auth_default_textinput_border_color</item>
        <item name="hintTextAppearance">@style/TextInputHint</item>
        <item name="errorTextAppearance">@style/TextInputError</item>
        <item name="errorTextColor">@color/colorErroronAuth</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="errorIconTint">@android:color/white</item>
        <item name="startIconTint">@android:color/white</item>
    </style>

    <style name="AccentTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/normal_textinput_border_color</item>
        <item name="hintTextAppearance">@style/TextInputHint</item>
        <item name="errorTextAppearance">@style/TextInputError</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="FilledTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@color/normal_textinput_border_color</item>
        <item name="hintTextAppearance">@style/TextInputHint</item>
        <item name="errorTextAppearance">@style/TextInputError</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="errorIconTint">@color/colorError</item>
    </style>

    <style name="OutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">19sp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">50pt</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="NormalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="NavDrawerTexApptStyle" parent="TextAppearance.AppCompat.Menu">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">55dp</item><!-- menu item height- vary as u need -->
    </style>

    <style name="TextInputAutoCompleteLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/normal_textinput_border_color</item>
        <item name="hintTextAppearance">@style/TextInputHint</item>
        <item name="errorTextAppearance">@style/TextInputError</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="endIconTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarAppearance" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="CollapsinBarAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NotSelectedToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="SelectedToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/DialogTitlePanel</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogTextBodyStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogPositiveButtonStyle</item>

    </style>

    <style name="DialogTitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>
    <style name="DialogTitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogTextBodyStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/darkerGrey</item>
    </style>

    <style name="DialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>

    </style>

</resources>